{
  "name": "@signaler/cli",
  "version": "1.0.9",
  "private": false,
  "description": "Web performance auditing tool with batch Lighthouse audits, automatic route detection, and comprehensive reporting",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "signaler": "./dist/bin.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx src/bin.ts",
    "test": "vitest run",
    "start": "node dist/bin.js",
    "prepublishOnly": "pnpm run build",
    "package": "pnpm run build && pkg . --compress GZip",
    "package:win": "pnpm run build && pkg . --targets node18-win-x64 --compress GZip",
    "package:all": "pnpm run build && pkg . --compress GZip"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "axe-core": "^4.10.2",
    "chrome-launcher": "^1.2.1",
    "enquirer": "^2.4.1",
    "lighthouse": "^13.0.1",
    "open": "^10.1.0",
    "prompts": "^2.4.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/prompts": "^2.4.9",
    "@types/ws": "^8.18.1",
    "fast-check": "^4.5.3",
    "pkg": "^5.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "release-assets"
  }
}
