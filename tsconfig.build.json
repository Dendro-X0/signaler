{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "removeComments": true,
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts", 
    "src/**/*.spec.ts",
    "src/**/__tests__/",
    "src/**/test/",
    "src/**/tests/",
    "src/**/*.development.ts",
    "src/**/*.dev.ts"
  ]
}
